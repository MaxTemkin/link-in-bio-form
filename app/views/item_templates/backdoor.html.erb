<h1>Add a new item</h1>

<form action="/insert_item" method="post">

  <div>
    <label for="link_url">Link URL</label>
    <input type="text" id="link_url" name="link_url" placeholder="Enter a URL...">
  </div>

  <div>
    <label for="description">Link Description</label>
    <input type="text" id="description" name="description" placeholder="Enter a link description...">
  </div>

  <div>
    <label for="image_url">Thumbnail URL</label>
    <input type="text" id="image_url" name="image_url" placeholder="Enter a thumbnail URL...">
  </div>

  <div>
    <input type="submit" value="Create Item">
  </div>

</form>
